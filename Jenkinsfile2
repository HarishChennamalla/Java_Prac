pipeline
{
    agent any
    tools
        {
            maven 'MAVEN'
        }
    stages
    {
        stage('Compile the code')
        {
            steps
            {
                sh 'mvn clean package'
            }
        }
        stage('Checking the code quality')
        {
            steps
            {
            withSonarQubeEnv('sonar')
            {
                sh 'mvn sonar:sonar'
            }

            }
        }
        stage('Pushing the artifacts to nexus repository')
        {
            steps
            {
            sh '''
                mvn clean package
                mv target/shipping-1.0.jar javap.jar
                zip -r javap.zip javap.jar
                curl -f -v -u admin:admin123 --upload-file javap.zip http://172.31.7.9:8081/repository/repositories/javap-hosted/javap.zip
               '''
            }
        }
    }
}
